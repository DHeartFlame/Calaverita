@model List<ProyectoA.Models.ARTICULO>

@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Base.css" />

</head>
<body>
    <style>

        .busqueda {
            width: 100%;
            padding: 0 10% 0 10%;
        }
        .boton {
            width: 20%;
            background-color: black;
            color: white;
            transition: 0.9s;
            box-shadow: 0px 3px 3px darkgray;
        }

            .boton:hover {
                background-color: dimgray;
                color: black;
            }


        .buscar {
            width: 80%;
            background-color: white;
            box-shadow: 0px 3px 3px lightgray;
        }
        .bt{
            width:100%;
        }
        .imgarticulo{
            width:100%;
            height:300px;
        }
    </style>
    <div class="container">
        <hr />
        <br />
        <div class="busqueda btn-group">
            <input type="text" class="buscar btn btn-group" placeholder="Busca algo..." />
            <input type="submit" class="boton btn btn-group" value="Ir" />
        </div>
        <br />
        <br />
        
        <div class="menu col-md-3" data-toggle="collapse" data-target=".navbar-collapse">
            <button onclick="" class="bt btn btn-info">@Html.ActionLink("Administrar usuarios","adminUsuarios")</button>
            <button class="bt btn btn-info">Gestionar anuncios</button>
            <button class="bt btn btn-info">Estadisticas</button>

        </div>
        <div class="publicaciones">
            @foreach (var item in Model)
            {
            <div class="col-md-3">
                <img class="imgarticulo" src="@Url.Action("convertirImagenA","User",new { codigo = item.ID_ARTICULO, img=1 })" />
                <br />

                @if (item.TITULO.Length > 10)
                {
                    <h1>@item.TITULO.Substring(0, 9) ...</h1>
                }
                else
                {
                    <h1>@item.TITULO</h1>
                }
                @if (item.TITULO.Length > 10)
                {
                    <p>@item.DESCRIPCION.Substring(0, 9) ...</p>
                }
                else
                {
                    <p>@item.DESCRIPCION</p>

                }
            </div>
            }

        </div>

    </div>
</body>
</html>
