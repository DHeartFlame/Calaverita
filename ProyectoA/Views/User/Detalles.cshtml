@model List<ProyectoA.Models.ARTICULO>

@{
    Layout = "../Shared/_LayoutUser.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Inicio</title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Base.css" />

</head>
<body>
    <style>
        .principal{
            width:100%;
            height:250px;
            margin-bottom:20px;
        }
        .secundarias{
            width:45%;
            margin-right:2.5%;
            height:100px;
            opacity:0.5;
            transition:0.9s;
            transition:0.9s;
        }
        .secundarias:hover{
            opacity:1;
        }
        .comentarios{
            background-color:lightgray;
            width:100%;
            height:200px;
            margin-top:50px;
            border-radius:15px;
        }
    </style>

    <div class="container">
        <div class="container">
            @foreach (var item in Model)
            {
                if (item.ID_ARTICULO.ToString() == ViewBag.id)
                {

                    <div class="col-md-4">
                        @if (item.IMAGEN1 == null)
                        {
                            <img class="principal" src="~/Imagenes/calalogon.png" />
                        }
                        else
                        {
                            <img class="principal" src="@Url.Action("convertirImagenA","User",new { codigo = item.ID_ARTICULO , img = 1})" />
                        }
                        @if (item.IMAGEN2 != null)
                        {
                            <img class="secundarias" src="@Url.Action("convertirImagenA","User",new { codigo = item.ID_ARTICULO , img = 2 })" />
                        }
                        @if (item.IMAGEN3 != null)
                        {
                            <img class="secundarias" src="@Url.Action("convertirImagenA","User",new { codigo = item.ID_ARTICULO, img = 3})" />
                        }
                    </div>
                    <div class="col-md-8 container">
                        <h1>@item.TITULO</h1>
                        <h3><font color="red">RD$ @item.PRECIO</font></h3>
                        <p>@item.DESCRIPCION</p>
                        Anuncio de: <b>@item.ID_USUARIO</b>

                    </div>
                }

            }
        </div>
        
        <div class="comentarios">
            <h1>Comentarios no disponibles</h1>
        </div> 
    </div>
</body>
</html>
