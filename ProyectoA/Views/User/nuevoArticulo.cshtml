@model ProyectoA.Models.ARTICULO

@{
    ViewBag.Title = ViewBag.loggedUser;
    Layout = "../Shared/_LayoutUser.cshtml";
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel=" stylesheet" href="~/Content/Base.css" />
</head>
<body>

    Nuevo anuncio:
    <br />
    <form action="/User/nuevoArticulo" enctype="multipart/form-data" method="post">
        @Html.ValidationSummary()
        <div class="form-group">
            <input type="text" class="form-control" name="TITULO" placeholder="Titulo" required />
        </div>

        <div class="form-group">
            <textarea name="DESCRIPCION" class="form-control" placeholder="Type a description"></textarea>

        </div>

        <div class="form-group">
            <input type="file" class="form-control" id="IMAGEN1" name="upload1" />
        </div>
        <div class="form-group">
            <input type="file" class="form-control" id="IMAGEN2" name="upload2" />
        </div>
        <div class="form-group">
            <input type="file" class="form-control" id="IMAGEN3" name="upload3" />
        </div>
        <div class="form-group">
            <input type="number" required class="form-control" id="PRECIO" name="PRECIO" />
        </div>
        <input type="submit" class="btn btn-default" name="publicar" value="Publicar" />

    </form>


</body>
</html>