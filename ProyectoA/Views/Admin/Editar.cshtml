@model List<ProyectoA.Models.USUARIOS>

@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Base.css" />

    <link rel="stylesheet" href="~/Content/Inicio.css" />
    <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>Editar</title>
</head>
<body>
    <style>
        .foto {
            text-align: center;
        }

        .fotoperfil {
            width: 100%;
            height: 250px;
            transition: 0.9s;
        }

            .fotoperfil:hover {
                opacity: 0.5;
            }
    </style>
    <div class="container">
        @foreach (var item in Model)
        {
            if(item.ID_USUARIO == ViewBag.id)
            {
                <h1>Editar usuario @item.ID_USUARIO</h1> <br />
                <form action="/Admin/Editar" method="post">
                @Html.ValidationSummary()

                    <div class="form-group">
                      Administrador:
                        <select name="ADMINISTRADOR" value="this.option">
                            <option value="NO">NO</option>
                            <option value="SI">SI</option>
                        </select>
                      </div>
                    <div class="form-group">
                     Nombre:
                     <input type="text" disabled class="form-control" id="ID_USUARIO" name="ID_USUARIO" value="@item.ID_USUARIO" />
                     </div>
                     <div class="form-group">
                     Nombre:
                     <input type="text" required class="form-control" id="NOMBRE" name="NOMBRE" value="@item.NOMBRE" />
                     </div>

                     <div class="form-group">
                     Apellido*:
                     <input type="text" required class="form-control" id="APELLIDO" name="APELLIDO" value="@item.APELLIDO" />
                     </div>
                     <div class="form-group">
                     Contraseña:
                     <input type="text" required class="form-control" id="PASS" name="PASS" value="" />
                     </div>
                     <div class="form-group">
                     Correo*:
                         <input type="text" required class="form-control" id="CORREO" name="CORREO" value="@item.CORREO" />
                     </div>

                      <div class="form-group">
                      Ciudad:
                          <input type="text" required class="form-control" id="CIUDAD" name="CIUDAD" value="@item.CIUDAD" />
                      </div>

                      <div class="text-center">
                          <input class="btn btn-info" type="submit" name="cambiar" value="Guardar cambios" />
                       </div>

                      </form>
            }

        }



    </div>
</body>
</html>
