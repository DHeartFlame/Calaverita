@model List<ProyectoA.Models.USUARIOS>

@{
    Layout = "../Shared/_LayoutAdmin.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/Base.css" />

    <link rel="stylesheet" href="~/Content/Inicio.css" />
    <script src="http://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>adminUsuarios</title>
</head>
<body>
    <style>
        .foto {
            text-align: center;
        }

        .fotoperfil {
            width: 100%;
            height: 250px;
            transition: 0.9s;
        }

            .fotoperfil:hover {
                opacity: 0.5;
            }
    </style>
    <div class="container">
        <div class="menu navbar-collapse collapse" data-toggle="collapse" data-target=".navbar-collapse">
    <button class="bt btn btn-info">Administrar usuarios</button>
    <button class="bt btn btn-info">Geestionar anuncios</button>
    <button class="bt btn btn-info">Estadisticas</button>

</div>
        <div class="table-responsive">
            <table id="usuarios" class="table">
                <thead>
                    <tr>
                        <th>Usuario</th>
                        <th>Nombre</th>
                        <th>Correo</th>
                        <th>Contrasenia</th>
                        <th>Fecha nac.</th>
                        <th>Admin</th>
                        <th>Ciudad</th>

                    </tr>
                </thead>
                <tbody id="developers">
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.ID_USUARIO</td>
                            <td>@user.NOMBRE @user.APELLIDO</td>
                            <td>@user.CORREO</td>
                            <td>@user.PASS</td>
                            <td>@user.FECHA_NAC</td>
                            <td>@user.ADMINISTRADOR</td>
                            <td>@user.CIUDAD</td>
                            
                            <td>
                                <form action="/Admin/Editar" method="get">
                                    <button id="@user.ID_USUARIO" name="Editar" runat="server" type="submit" class="btn btn-info" onserverclick="Editar" onclick="edit(this.id)">Editar</button>
                                </form>
                                    </td>
                            <td>
                                <form action="/Admin/Borrar" method="post">
                                    <button id="@user.ID_USUARIO" name="Borrar" runat="server" type="submit" onserverclick="Borrar" onclick="edit(this.id)" class="btn btn-danger">Borrar</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
            
        </div>
        <div class="col-md-12 text-center">
            <ul class="pagination pagination-lg pager" id="developer_page"></ul>
        </div>
    </div>
    <script>
        $(document).ready(function () {
            $('#usuarios').dataTable();
        });
        function edit(id) {
            document.getElementById(id).value = id;
        }
    </script>
</body>
</html>
